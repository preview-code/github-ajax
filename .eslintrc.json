{
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "fix": true,
  "extends": "eslint:recommended",
  "rules": {
    "no-else-return": 0,
    "no-console": 0,
    "eqeqeq": 1,
    "array-bracket-spacing": 1,
    "brace-style": [1, "1tbs", {
      "allowSingleLine": true
    }],
    "comma-spacing": 1,
    "eol-last": 1,
    "key-spacing": 1,
    "object-curly-spacing": 1,
    "space-before-blocks": 1,
    "keyword-spacing": 1,
    "quotes": [2, "single", {
      "avoidEscape": true
    }],
    "indent": ["warn", 2]
  },
  "env": {
    "browser": true
  },
  "plugins": [
    "html"
  ],
  "globals": {
    "Promise": false,
    "Polymer": false,
    "sinon": false,
    "assert": false,
    "it": false,
    "fixture": false,
    "describe": false,
    "WCT": false,
    "beforeEach": false,
    "afterEach": false,
    "expect": false,
    "onRequest": false,
    "onGET": false,
    "onPOST": false,
    "jsonOk": false,
    "ok": false,
    "wait": false,
    "respondWith": false,
    "serverError": false,
    "getRequestParam": false,
    "ArrayBuffer": false
  }
}
